{% extends 'base.html' %}

{% block title %}SIMS | 商品情報詳細{% endblock %}

{% block main_contents %}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">商品管理</h1>

        <div class="row">
            <div class="card mb-4">

                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    商品情報詳細
                </div>

                <div class="itemmas-table item-table">
                    
                    <h2>{{ object.model_number }}</h2>
                        <div class="contents">
                            <div class="item img">
                                {% if object.item_image %}
                                    <img src="{{ object.item_image.url }}" width="200" height="200">
                                {% endif %}
                            </div>
                            <table class="item-detailtable">
                                <thead class="tablecolumn">
                                    <tr>
                                        <th>商品コード</th>
                                        <td>{{ object.id }}</td>
                                        <th>型番</th>
                                        <td>{{ object.model_number }}</td>
                                    </tr>
                                    <tr>
                                        <th>カテゴリ</th>
                                        <td>{{ object.get_category_display }}</td>
                                        <th>メーカー名</th>
                                        <td>{{ object.manufacturer_name }}</td>
                                    </tr>
                                    <tr>
                                        <th>仕入価格</th>
                                        <td>{{ object.purchase_price }}</td>
                                        <th>店舗名</th>
                                        <td>{{ object.store_id }}</td>
                                    </tr>
                                    <tr>
                                        <th>備考</th>
                                        <td colspan="3">{{ object.remarks }}</td>
                                    </tr>
                                </thead>
                            </table>
                        </div>

                    <div class="itemmas-table spec-table">
                        <table class="item-detailtable sub1">
                            <thead class="tablecolumn">
                                <tr>
                                    <th>モニタサイズ</th>
                                    <td>{{object_detail.monitor_size}}</td>
                                    <th>OS</th>
                                    <td>{{object_detail.os}}</td>
                                </tr>
                                <tr>
                                    <th>CPU</th>
                                    <td>{{object_detail.cpu}}</td>
                                    <th>モニタ解像度(縦)</th>
                                    <td>{{object_detail.monitor_vertical}}</td>
                                </tr>
                                <tr>
                                    <th>HDD</th>
                                    <td>{{object_detail.hdd}}</td>
                                    <th>モニタ解像度(横)</th>
                                    <td>{{object_detail.monitor_horizon}}</td>
                                </tr>
                                <tr>
                                    <th>SSD</th>
                                    <td>{{object_detail.ssd}}</td>
                                    <th>カメラ</th>
                                    <td>{{object_detail.camera}}</td>
                                </tr>
                                <tr>
                                    <th>光学ドライブ</th>
                                    <td>{{object_detail.optical_drive}}</td>
                                    <th>Wi-Fi</th>
                                    <td>{{object_detail.wifi}}</td>
                                </tr>
                                <tr>
                                    <th>グラフィック</th>
                                    <td>{{object_detail.graphic}}</td>
                                    <!-- <th>型番</th>
                                    <td>{{object_detail.model_number}}</td> -->
                                </tr>
                            </thead>
                        </table>
                    <form method="POST">
                        {% csrf_token %}
                        <div class="placement-center">
                            <a class="btn btn-main" href="#{ url 'itemmas:S03-04' object.pk %}">編集</a>
                            <button class="btn btn-main" type="submit">削除</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>


{% endblock %}